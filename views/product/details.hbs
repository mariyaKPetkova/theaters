
<div class="container">

    <section class="details">
        <h1>Theater title: {{product.name}}</h1>
        <div>
            <img src="{{product.imageUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{product.description}}</p>
        
        <div class="buttons">
            {{#if product.isAuthor}}
            <a class="btn delete" href="/products/delete/{{product._id}}">Delete</a>
            <a class="btn edit" href="/products/edit/{{product._id}}">Edit</a>
            {{/if}}
            {{#if product.isntAuthor}}
            {{#if product.isLiked}}
            <span class="liked">You have already liked this play!</span>
            {{else}}
            <a class="btn like" href="/products/like/{{product._id}}">Like</a>
            {{/if}}
            {{/if}}
        </div>
    </section>
</div>